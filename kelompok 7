int nomer[MAX];
int head=-1, tail=-1, k=1;
 
bool IsEmpty(){
   if(tail == -1){
       return true;
   }else{
       return false;
   }
}
bool IsFull(){
   if(tail == MAX-1){
       return true;
   }else{
       return false;
   }
}
void Masuk(int ya){
    if (IsEmpty()){
        head=tail=0;
    }else {
        tail++;
    }
    nomer[tail]=ya;
}
void Keluar(){
    if(IsEmpty()){
        cout<<"Antrian sudah kosong ! ";
 
    } else {
        for(int j=head;j<tail;j++){
            nomer[j]=nomer[j+1];
        }
        tail--;
        if(tail == -1){
            head = -1;
        }
    }
}
void Clear(){
     head=tail=-1;
     k=1;
}
